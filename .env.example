DATABASE_URL=./db.sqlite

# Passkey/WebAuthn Configuration
# RP_NAME - Relying Party name displayed to users during passkey registration
# Default: "Passwordless Demo"
RP_NAME=Passwordless Demo

# RP_ID - Relying Party ID (domain without protocol)
# For development: "localhost"
# For production: your domain without protocol (e.g., "yourdomain.com")
# Default: "localhost"
RP_ID=localhost

# ORIGIN - Expected origin for WebAuthn verification
# For development: "http://localhost:3000"
# For production: your full domain with protocol (e.g., "https://yourdomain.com")
# Default: "http://localhost:3000"
ORIGIN=http://localhost:3000
